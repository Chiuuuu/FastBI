.menu {
    min-height: 804px;
    background-color: #ffffff;
    .menu_title {
        font-size: 16px;
        font-family: Microsoft YaHei;
        font-weight: 400;
        color: rgba(1, 4, 15, 1);
        line-height: 48px;
        margin-left: 14px;
        border-bottom: 1px solid rgba(239, 239, 239, 1);
        display: flex;
        justify-content: space-between;
        .menu_icon {
            margin-right: 14px;
            margin-top: 16px;
        }
    }
    .menu_search {
        width: 90%;
        height: 32px;
        margin-left: 14px;
        margin-right: 14px;
        margin-top: 17px;
        font-size: 14px;
    }
    .menu_tips{
        font-size: 12px;
        color: #999999;
        text-align: left;
        width: 90%;
        margin: 0 auto;
    }
    .table_list-_empty{
        color: rgba(0, 0, 0, 0.65);
    }
}
.card-img{
    height 100px;
}
.card-title {
    color: #333;
    text-align: center;
    text-transform: capitalize;
}
.group {
    ul {
        margin: 0;
    }
  &.is-folder {
    margin: 0 -14px;
    .items {
      .item {
        padding-left: 34px;
      }
    }
  }
  .file-icon {
      margin-right: 5px;
      margin-bottom: 2px;
      height: 16px;
      width: 16px;
  }
  .folder {
    height: 30px;
    line-height: 30px;
    position: relative;
    &.dragable-current {
      border: 1px solid #103ffa;
    }
    &.folder-active,
    &:hover {
      cursor: pointer;
      z-index: 3;
      background: #103ffa;
      color: #fff;
      .menu {
        display: inline-block;
      }
      .title-span,
      .folder-icon {
          color: #ffffff;
      }
    }
  }
  .title {
    padding: 0 28px 0 22px;
    height: 30px;
    line-height: 30px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 12px;
    .folder-icon {
        font-size: 14px;
        margin-right: 5px;
    }
  }
  .menu {
    display: none;
    position: absolute;
    right: 24px;
    top: 3px;
    height: 28px;
    line-height: 28px;
    min-height: auto;
    .caret-down {
      width: 0;
      height: 0;
      border: 6px solid white;
      border-color: white transparent transparent transparent;
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
    }
  }
  .items {
    .item {
      height: 30px;
      line-height: 30px;
      padding: 0;
      position: relative;
      &.file-active,
      &:hover {
        cursor: pointer;
        z-index: 3;
        background: #103ffa;
        color: #fff;
        .menu {
          display: inline-block;
        }
        .title {
            color: #ffffff
        }
      }
    }
  }
}