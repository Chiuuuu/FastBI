@import "../common/var.styl"
.dv-context-menu {
  position: fixed;
  z-index: 9999;
  background: $color-admin-context-menu;
  color: $color-admin-context-menu-color;
  user-select: none;
  .context-menu-item {
    padding: 0 6px;
    line-height: 28px;
    height: 28px;
    border-left: 2px solid transparent;
    cursor: pointer;
    overflow: hidden;
    padding-right: 3em;
    display: flex;
    .iconfont {
      margin-right: 3px;
      line-height: 28px;
      width: 16px;
    }
    &:hover {
      background-color: #1d262e;
      color: #00baff;
      border-left: 2px solid #00baff;
    }
  }
}
.releace-box {
  position: relative;
  padding: 5px;
  .releace-line {
    margin-bottom: 20px;
    height:40px;
    line-height:40px;
    .label {
      width: 20%;
    }
    .errortext {
      color: red;
    }
    .has-error{
        border-color:red;
        &:hover{
             border-color:red;
             box-shadow: none;
        }
        &:focus{
            border-color:red;
            box-shadow: none;
        }
    }
  }
  .indent {
    margin-left: 15%;
    margin-bottom: 10px;
    .indent-text {
      color: #617BFF;
      cursor: pointer;
    }
    .qrcode {
      margin-left: 8px;
    }
  }
  .code-show {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%, -50%, 0);
    z-index: 99;
  }
}
.mod_input {
  width: 310px;
}
