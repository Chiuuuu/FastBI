.sidebar {
    background: #001529;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 220px;
    .header {
        height: 56px;
        line-height: 56px;
        padding-left: 20px;
        padding-right: 20px;
        position: relative;
        img {
            width: 24px;
            position: absolute;
            top: 50%;
        }
        span {
            color: #fff;
            font-weight: bold;
            font-size: 18px;
        }
    }
}